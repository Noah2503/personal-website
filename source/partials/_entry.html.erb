<div class="entry <%= "index#{index} #{article.metadata[:page][:type]} rank#{article.metadata[:page][:rank] || 1}" %>">
  <div class="entry-header">
    <h2>
      <%= article.title %>
      <% if icon = icon_for_type(article.metadata[:page][:type]) %>
        <span class="glyphicon glyphicon-<%= icon %>"></span>
      <% end %>
    </h2>
  </div>
  <div class="entry-body">
    <%= article.body %>
  </div>
</div>
