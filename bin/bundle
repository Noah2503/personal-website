#!/usr/bin/env ruby

S3_BUCKET = "charlieegan3-www-codepipeline"
BUNDLE_ARCHIVE_NAME = "bundle.zip"

bundle_exists = `aws s3 ls #{S3_BUCKET}`.include?(BUNDLE_ARCHIVE_NAME)

if bundle_exists
  if !File.exists?(BUNDLE_ARCHIVE_NAME)
    puts "Downloading bundle"
    puts `aws s3 cp s3://#{S3_BUCKET}/#{BUNDLE_ARCHIVE_NAME} #{BUNDLE_ARCHIVE_NAME}`
  end

  puts "Installing bundle"
  puts `unzip -o #{BUNDLE_ARCHIVE_NAME}`
  puts `bundle install --path vendor/bundle`
else
  puts "Dependencies missing"

  puts `bundle install --path vendor/bundle`
  puts `zip -r #{BUNDLE_ARCHIVE_NAME} vendor/`
  puts `aws s3 cp #{BUNDLE_ARCHIVE_NAME} s3://#{S3_BUCKET}/#{BUNDLE_ARCHIVE_NAME}`
end
