#!/usr/bin/env ruby

require "open-uri"
require "sanitize"
require "pp"

content = open("https://raw.githubusercontent.com/tachyons-css/tachyons/c0f54d390af447173d4846b69314d23c29fe608d/css/tachyons.css").read

config = Marshal.load(Marshal.dump(Sanitize::Config::RELAXED))
config[:css][:allow_comments] = false
content = Sanitize::CSS.stylesheet(content, config)

content = content.gsub(/\n+/, "\n")
content = content.gsub(/\s+\n/, "\n")

File.write("source/stylesheets/_tachyons.scss", content.strip + "\n")
